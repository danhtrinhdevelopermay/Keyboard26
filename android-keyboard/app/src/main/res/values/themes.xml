<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.iOS26Keyboard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryDark">@color/accent_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="KeyStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/key_text_light</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="SpecialKeyStyle" parent="KeyStyle">
        <item name="android:background">@drawable/special_key_background</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="SpaceKeyStyle" parent="KeyStyle">
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
