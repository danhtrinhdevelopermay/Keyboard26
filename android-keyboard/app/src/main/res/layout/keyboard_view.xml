<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/keyboard_background"
    android:orientation="vertical"
    android:paddingHorizontal="3dp"
    android:paddingBottom="34dp"
    android:paddingTop="6dp">

    <!-- Suggestion Bar -->
    <LinearLayout
        android:id="@+id/suggestion_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/suggestion_1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/suggestion_background"
            android:gravity="center"
            android:text="the"
            android:textColor="@color/key_text_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/suggestion_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/suggestion_background"
            android:gravity="center"
            android:text="I"
            android:textColor="@color/key_text_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/suggestion_3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/suggestion_background"
            android:gravity="center"
            android:text="to"
            android:textColor="@color/key_text_light"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Row 1: QWERTYUIOP -->
    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp">

    </LinearLayout>

    <!-- Row 2: ASDFGHJKL -->
    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="18dp">

    </LinearLayout>

    <!-- Row 3: ZXCVBNM + Shift/Backspace -->
    <LinearLayout
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp">

    </LinearLayout>

    <!-- Row 4: 123, Globe, Space, Return -->
    <LinearLayout
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp">

    </LinearLayout>


</LinearLayout>
